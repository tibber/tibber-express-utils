{
  "name": "tibber-express-utils",
  "version": "1.8.1",
  "description": "",
  "main": "./dist/src/index.js",
  "scripts": {
    "2npm": "publish",
    "test": "ava --verbose",
    "login": "npm-cli-login -u $NPM_USERNAME -p $NPM_PASSWORD -e $NPM_EMAIL",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix && sortier \"./**/*.{ts,tsx,js,jsx}\"",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint",
    "release": "semantic-release",
    "release:local": "run.env semantic-release",
    "cz": "git add . && cz",
    "cz:init": "commitizen init cz-conventional-changelog --yarn --dev --exact"
  },
  "files": [
    "/dist"
  ],
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/src/",
        "test/": "dist/test/"
      }
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@snowcoders/sortier": "^3.2.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "ava": "^3.12.1",
    "commitizen": "^4.2.2",
    "conventional-commits": "^1.6.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint-plugin-ava": "^11.0.0",
    "express": "^4.17.1",
    "gts": "^3.0.2",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "run.env": "^1.1.0",
    "semantic-release": "^17.3.0",
    "supertest": "^6.0.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "es6-error": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tibbercom/tibber-express-utils.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
